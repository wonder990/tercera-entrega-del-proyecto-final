{{> navBar}}
                        

    <div class="row">

    {{#if cart.allProducts.length}}
        {{#each cart.allProducts}}
        <div class="col-md-3">

                <div class="card" style="margin-top: 15px;">
                    <img class="card-img-top" src="{{this.photo_url}}" alt="Card image cap" style="margin: 0 auto; max-height: 200px; max-width: 200px; height: 200px; width: auto">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{this.price}}</h6>
                        <p class="card-text">{{this.description}}</p>
                        
                    </div>
                </div>
        </div>
        
        {{/each}}
        <div class="mt-4">
        <form action="/api/carrito/{{cart.cart_id}}" method="POST">
        <button class="btn btn-primary btn-sm" type="submit">Terminar compra</button>
        </form>
        </div>
    {{else}}
        <h2>El carrito esta vacio</h2>
    {{/if}}
    
    
</div> 