{{#if productos.length}}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Titulo</th>
                <th scope="col">Precio</th>
                <th scope="col">URL</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
                <tr>
                    <th scope="row">{{this.id}}</th>
                    <td>{{this.title}}</td>
                    <td>$ {{this.price}}</td>
                    <td><img
                            style="max-width: 200px"
                            src="{{this.thumbnail}}"
                        /></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <h2>No se encontraron productos</h2>
{{/if}}